<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Texto titulo-->
    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adopta amor"
        android:layout_marginTop="30dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/textoTitulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113"/>

    <!--Texto nombre-->
    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adopta un amigo, gana un compañero para toda la vida"
        android:gravity="center"
        android:layout_marginTop="150dp"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@id/textoTitulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113"/>

    <!--Texto perro-->
    <TextView
        android:id="@+id/textViewNombrePerro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/textoTitulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113"/>

    <!--Descripción del perro-->
    <TextView
        android:id="@+id/textViewDescripcionPerro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="150dp"
        android:textSize="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/textoTitulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113"/>

    <!--Imagen-->
    <ImageView
        android:id="@+id/textoTitulo"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:src="@drawable/adopta"
        app:layout_constraintBottom_toTopOf="@id/botonCambiarTexto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTitulo"
        app:layout_constraintVertical_bias="0.2"
        tools:srcCompat="@tools:sample/avatars" />

    <!--Botón cambiar texto-->
    <Button
        android:id="@+id/botonCambiarTexto"
        android:layout_width="362dp"
        android:layout_height="49dp"
        android:layout_marginTop="30dp"
        android:text="Conócenos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textoTitulo" />

    <!--Botón cambiar imagen-->
    <Button
        android:id="@+id/botonCambiarImagen"
        android:layout_width="362dp"
        android:layout_height="49dp"
        android:layout_marginTop="30dp"
        android:text="Conoce a un peludito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/botonCambiarTexto"
        />

    <!--Botón cambiar color-->
    <Button
        android:id="@+id/botonCambiarColor"
        android:layout_width="362dp"
        android:layout_height="49dp"
        android:layout_marginTop="30dp"
        android:text="¡Lo quiero!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/botonCambiarImagen"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>
